@model MyBudget.Models.Deposit

@{
    ViewData["Title"] = "Edit Account";
}

<h1 class="edit-title">Edit Account</h1>

<form asp-action="Edit" class="edit-form">
    <input type="hidden" asp-for="DepositID" />
    <input type="hidden" asp-for="Currency" />

    <div class="form-group">
        <label asp-for="DepositName" class="form-label"></label>
        <input asp-for="DepositName" class="form-input" />
        <span asp-validation-for="DepositName" class="validation-message"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="save-btn" />
    </div>
</form>
