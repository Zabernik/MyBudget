@model MyBudget.Models.Deposit

@{
    ViewData["Title"] = "Delete Account";
}

<h1 class="delete-title">Delete Account</h1>

<h3 class="delete-confirm">Are you sure you want to delete this account?</h3>

<div class="delete-card">
    <div class="delete-item">
        <h4 class="delete-label">Deposit Name</h4>
        <p class="delete-value">@Html.DisplayFor(model => model.DepositName)</p>
    </div>

    <div class="delete-item">
        <h4 class="delete-label">Balance</h4>
        <p class="delete-value">@Model.Balance @Model.Currency</p>
    </div>

    <!-- Form w ramce z przyciskami -->
    <form asp-action="Delete" method="post" class="delete-form">
        <input type="hidden" asp-for="DepositID" />
        <input type="submit" value="Delete" class="delete-btn" />
        <a asp-action="Index" class="cancel-btn">Back to List</a>
    </form>
</div>
