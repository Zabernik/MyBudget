@model MyBudget.Models.Deposit

@{
    ViewData["Title"] = "Account Details";
}

<h1 class="details-title">Account Details</h1>

<div class="details-card">
    <div class="details-item">
        <h4 class="details-label">Deposit Name</h4>
        <p class="details-value">@Html.DisplayFor(model => model.DepositName)</p>
    </div>

    <div class="details-item">
        <h4 class="details-label">Balance</h4>
        <p class="details-value">@Html.DisplayFor(model => model.Balance) @Html.DisplayFor(model => model.Currency)</p>
    </div>

    <!-- Przyciski wewnątrz ramki -->
    <div class="details-actions">
        <a asp-action="Edit" asp-route-id="@Model.DepositID" class="action-btn">Edit</a>
        <a asp-action="Index" class="action-btn">Back to List</a>
    </div>
</div>
