@model IEnumerable<MyBudget.Models.ExpenseHistory>

@{
    ViewData["Title"] = "Expense History";
}

<h2>Expense History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category</td>
                <td>@item.Amount</td>
                <td>@item.Date</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExpenseHistoryID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ExpenseHistoryID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Expense</a>
