@model IEnumerable<MyBudget.Models.DepositHistory>

<div class="history-table">
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Difference</th>
                <th>Description</th>
                <th>Previous Deposit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var history in Model)
            {
                <tr class="@((history.Difference < 0) ? "negative-record" : "positive-record")">
                    <td>@history.Date.ToString("dd-MM-yyyy")</td>
                    <td>@history.Difference</td>
                    <td>@history.Description</td>
                    <td>@history.PreviousDeposit</td>
                </tr>
            }
        </tbody>
    </table>
</div>
