@{
    ViewBag.Title = "Accounts";
}

<h2>Account Management</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Add New Account</h3>
        <form method="post" action="@Url.Action("AddAccount", "Home")">
            <div class="form-group">
                <label for="accountName">Account Name</label>
                <input type="text" id="accountName" class="form-control" name="name" required />
            </div>
            <div class="form-group">
                <label for="accountBalance">Initial Balance</label>
                <input type="number" id="accountBalance" class="form-control" name="balance" required />
            </div>
            <button type="submit" class="btn btn-primary">Add Account</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Account List</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Balance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Checking Account</td>
                    <td>$1500</td>
                    <td>
                        <a href="#">Edit</a> | <a href="#">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
